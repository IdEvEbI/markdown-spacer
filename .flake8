[flake8]
max-line-length = 88
ignore = E203, W503
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    .pytest_cache,
    build,
    dist,
    *.egg-info
per-file-ignores =
    # Ignore unused imports in __init__.py files
    __init__.py: F401
    # Ignore line too long in docstrings
    __init__.py: E501 